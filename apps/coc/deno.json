{
  "name": "@ashworth/coc",
  "version": "1.0.0",
  "exports": "./main.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-all npm:vite dev",
    "dev-simple": "deno run --allow-net --allow-read simple-dev.ts",
    "dev-deno": "deno run --allow-net --allow-read --allow-write deno-dev.ts",
    "build": "deno run --allow-all --node-modules-dir=auto build.ts",
    "preview": "deno run --allow-all --node-modules-dir=auto preview.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "type-check": "deno check --sloppy-imports src/**/*.ts src/**/*.tsx"
  },
  "imports": {
    "@/": "./src/",
    "@/components/": "./src/components/",
    "@/lib/": "./src/lib/",
    "@/hooks/": "./src/hooks/",
    "@/types/": "./src/types/",
    "@/stores/": "./src/stores/",
    "react": "https://esm.sh/react@18.2.0",
    "react-dom": "https://esm.sh/react-dom@18.2.0",
    "react-dom/client": "https://esm.sh/react-dom@18.2.0/client",
    "react/jsx-runtime": "https://esm.sh/react@18.2.0/jsx-runtime",
    "vite": "https://esm.sh/vite@4.5.0",
    "@vitejs/plugin-react": "https://esm.sh/@vitejs/plugin-react@4.1.0",
    "autoprefixer": "https://esm.sh/autoprefixer@10.4.0",
    "postcss": "https://esm.sh/postcss@8.4.0",
    "zustand": "https://esm.sh/zustand@4.4.0",
    "clsx": "https://esm.sh/clsx@2.0.0",
    "tailwind-merge": "https://esm.sh/tailwind-merge@2.0.0",
    "lucide-react": "https://esm.sh/lucide-react@0.300.0",
    "@carbon/react": "npm:@carbon/react@1.89.0",
    "@carbon/icons-react": "npm:@carbon/icons-react@11.42.0",
    "@carbon/styles": "npm:@carbon/styles@1.89.0",
    "@carbon/themes": "npm:@carbon/themes@11.42.0",
    "prop-types": "npm:prop-types@15.8.1"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "es6"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "files": {
      "include": ["src/", "*.ts", "*.tsx", "*.js", "*.jsx"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "*.ts", "*.tsx"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}